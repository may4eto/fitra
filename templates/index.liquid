{% assign mainProduct = all_products['fitra-activity-band'] %}

<h1>{{ mainProduct.title }}</h1>
<div id="product-images">
  {% for image in mainProduct.images %}
    <figure class="single-product-image">
      <img src="{{ image | image_url: large }}" width="300" />
    </figure>
  {% endfor %}
</div>
<div id="product-info">
  <div class="headline">
    <h2>{{ 'product.copy.headline' | t }}</h2>
  </div>
  <div class="description">
    <h3>{{ 'product.copy.description_title' | t }}</h3>
    <p>{{ mainProduct.description }}</p>
  </div>
  <div class="details">
    <ul>
      <li>{{ 'product.details_list.item_1' | t }}</li>
      <li>{{ 'product.details_list.item_2' | t }}</li>
    </ul>
  </div>
  <div class="form-wrapper">
    <form action="/cart/add" method="post" enctype="multipart/form-data" id="AddToCartForm">
      <lavel for="productSelect">{{ mainProduct.options.first }}</label>
      <select name="id" id="productSelect">
        {% for variant in mainProduct.variants %}
          <option value="{{ variant.id }}">{{ variant.title }}</option>
        {% endfor %}
      </select>
      <button type="submit" name="add" id="AddToCart">{{ 'product.form.submit' | t }}
        <span class="price">{{ mainProduct.prise | money_without_trailing_zeros }}</span>
      </button>
    </form>
  </div>
</div>

