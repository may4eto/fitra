{% assign mainProduct = all_products['fitra-activity-band'] %}
<main id="page-index">
  <div id="product-images" class="sticky-side-image">
    {% for image in mainProduct.images %}
      <figure class="single-product-image" {% if image.attached_to_variant? %} data-variant="{{image.variants.first.id}}" {%endif%} style="{% if forloop.index > 1%} display: none; {%endif%}">
        <img src="{{ image | image_url: x1440 }}" width="300" />
      </figure>
    {% endfor %}
  </div>
  <div id="product-info" class="main-content grid">
    <div class="valign-center">
      <h1 class="headline-big">{{ mainProduct.title | remove: ' Activity Band' }}</h1>
    </div>
    <div id="product-info-content"class="grid two-columns">
      <div class="headline valign-bottom">
        <h2>{{ 'product.copy.headline' | t }}</h2>
      </div>
      <div class="description">
        <h3>{{ 'product.copy.description_title' | t }}</h3>
        <div class="description-content">
          {{ mainProduct.description }}
        </div>
      </div>
      <div class="details">
        <ul class="list-with-stroke">
          <li>{{ 'product.details_list.item_1' | t }}</li>
          <li>{{ 'product.details_list.item_2' | t }}</li>
        </ul>
      </div>
      <div class="form-wrapper">
        <form action="/cart/add" method="post" enctype="multipart/form-data" id="add-to-cart-form">
          <label for="productSelect">{{ mainProduct.options.first }}</label>
          <div class="styled-select">
            <select name="id" id="variant-id" class="styled-input">
              {% for variant in mainProduct.variants %}
                <option value="{{ variant.id }}">{{ variant.title }}</option>
              {% endfor %}
            </select>
            <div class="select-arrow">
              <img src="{{'icon-arrow-down.svg' | asset_url }}" />
            </div>
          </div>
          <button type="submit" name="add" id="add-to-car-button" class="styled-input">{{ 'product.form.submit' | t }}
            <span class="price">{{ mainProduct.price | money_without_trailing_zeros }}</span>
          </button>
        </form>
      </div>
    </div>
  </div>
</main>


