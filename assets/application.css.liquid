:root {
    --main-font: 'Rubik', Arial, Helvetica, sans-serif;

    --color-accent: #FF3700;
    --black: #000000;
    --white: #ffffff;
    --color-text: #555555;
    --color-border: #DEDEDE;
    --color-label: #707070;
    --color-empty-bg: #BBBBBB;

    --line-global: 20px;
    --gutter-global: calc(var(--line-global)*2);

    --body-font-size: 15px;
    --label-font-size: 12px;

    --standard-border: 1px solid var( --color-border);
    --black-border: 1px solid var(--black);
}

* {
    font-family: var(--main-font);
    box-sizing: border-box;
}

html, body {
    width: 100%;
    margin: 0;
    padding: 0;
    color: var(--black);
    line-height: var(--line-global);
}

body {
    background-color: var(--white);
    font-size: var(--body-font-size);
}

h1, h2, h3, h4, h5, h6, p, ul, ol {
    margin: 0;
    padding: 0;
    font-weight: 400;
}

a {
    text-decoration: none;
}

.headline-big {
    font-size: 22vw;
    line-height: 1;
    font-weight: 300;
}

h2 {
    font-size: calc(var(--body-font-size)*2);
    line-height: calc(var(--line-global)*2);
}

h3 {
    font-size: var(--body-font-size);
    line-height: var(--line-global);
}

figure {
    margin: 0;
}

p, ul, ol {
    font-size: var(--body-font-size);
    line-height: var(--line-global);
    color: var(--text-color);
}

label {
    color: var(--color-label);
    font-size: var(--label-font-size);
}

.styled-select {
    position: relative
}

.styled-select .select-arrow {
    position: absolute;
    top: 1px;
    right: 1px;
    bottom: 1px;
    width: calc(var(--line-global)*3);
    text-align: center;
    line-height: calc(var(--line-global)*3);
    border-left: var(--black-border);
    pointer-events: none;
}

.styled-select .select-arrow img {
    display: inline-block;
    vertical-align: middle;
    width: 16px;
    height: 16px;
}

.styled-select select.styled-input {
    width: 100%;
    font-size: var(--body-font-size);
    line-height: var(--line-global);
    padding: var(--line-global);
    border: var(--black-border);
}

button.styled-input {
    width: 100%;
    font-size: var(--body-font-size);
    line-height: var(--line-global);
    padding: var(--line-global);
    color: var(--white);
}

#add-to-car-button {
    background-color: var(--color-accent);
}

#add-to-car-button span.price {
    float: right;
}

.styled-input {
    appearance: none;
    -webkit-appearance: none;
    -moz-appearance: none;
    -ms-appearance: none;
    cursor: pointer;
    background: transparent;
    border: none;
    border-radius: 0;
    width: auto;
    margin: 0;
    padding: 0;
    line-height: normal;
    -webkit-font-smoothing: inherit;
    -moz-osx-font-smoothing: inherit;
    text-align: left;
}

.grid {
    display: grid;
    column-gap: var(--gutter-global);
    row-gap: var(--gutter-global);
}

.two-columns {
    grid-template-columns: 1fr 1fr;
}

.main-content {
    min-height: 100vh;
    padding: var(--gutter-global);
    width: calc(50% + var(--gutter-global)/2);
    margin-left: auto;
    grid-template-rows: minmax(max-content, auto) minmax(min-content, max-content);
}

.sticky-side-image {
    position: fixed;
    left: 0;
    top: var(--gutter-global);
    bottom: var(--gutter-global);
    width: calc(50% - var(--gutter-global)/2);;
}

.sticky-side-image img, .single-product-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.valign-center {
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.valign-bottom {
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
}

.headline {
    padding-bottom: calc(var(--line-global)*3);
}

.description-content {
    margin-top: var(--line-global);
    color: var(--color-text);
}

.list-with-stroke {
    list-style-type: none;
}

.list-with-stroke li {
    padding: var(--line-global) 0;
    border-top: var(--standard-border);
}

.list-with-stroke li:last-child {
    border-bottom: var(--standard-border);
}

.form-wrapper {
    padding-top: calc(var(--line-global)*3);
}

.cart-item-count {
    color: var(--white);
    text-align: center;
    border-radius: 50%;
}

.link-to-cart, .link-to-home {
    position: fixed;
    top: 0;
    right: 0;
    padding: var(--gutter-global);
    color: var(--color-text);
}

.link-to-cart .cart-item-count {
    display: block;
    font-size: 0px;
    width: 10px;
    height: 10px;
    background-color: var(--color-border);
    margin-top: 5px;
}

.link-to-cart .cart-text {
    display: none;
    position: absolute;
    right: calc(100% - var(--gutter-global)/2);
    top: var(--gutter-global);
    white-space: nowrap;
}

.link-to-cart:hover .cart-text {
    display: block;
}

.link-to-cart.cart-filled .cart-item-count {
    width: 20px;
    height: 20px;
    border: var(--color-accent);
    font-size: var(--label-font-size);
    line-height: var(--line-global);
    margin-top: 0;
}

.empty-line {
    border-top: 1px solid var(--white);
    height: calc(var(--line-global)*3);
}

.empty-line:first-child {
    margin-top: var(--line-global);
}

.empty-line:last-child {
    border-bottom: 1px solid var(--white);
}

#cart {
    background: var(--color-empty-bg);
    color: var(--white);
}

#cart a {
    color: inherit;
}

#cart-title {
    position: relative;
    -webkit-text-fill-color: transparent;
    -webkit-text-stroke-color: var(--white);
    -webkit-text-stroke-width: 2px;
    -moz-text-fill-color: transparent;
    -moz-text-stroke-color: var(--white);
    -moz-text-stroke-width: 2px;
}

#cart .cart-item-count {
    position: absolute;
    top: 1em;
    right: 0;
    font-size: 0.08em;
    border: 2px solid var(--white);
    display: block;
    width: 2em;
    height: 2em;
    line-height: 2em;
}

#cart-empty-lines, #back-to-home {
    grid-column: 2;
}

#add-to-cart-form {
    margin-top: -(var(--line-global));
}

#product-info-content {
    row-gap: calc(var(--gutter-global)/2);
}

#back-to-home {
    margin-bottom: var(--line-global);
}